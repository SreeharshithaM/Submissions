{
  "name": "jestconfig",
  "version": "1.0.0",
  "main": "index.js",

  "scripts": {
    "test": "jest",
    "coverage": "jest --coverage"
  },

  "dependencies": {
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  },

  "devDependencies": {
    "@babel/core": "^7.28.5",
    "@babel/preset-env": "^7.28.5",
    "@babel/preset-react": "^7.28.5",
    "babel-jest": "^29.7.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/user-event": "^14.6.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0"
  },

  "jest": {
    "testEnvironment": "jsdom",

    "transform": {
      "^.+\\.jsx?$": "babel-jest"
    },

    "moduleFileExtensions": [
      "js",
      "jsx"
    ],

    "setupFilesAfterEnv": [
      "<rootDir>/setupTests.js"
    ],

    "collectCoverage": false,

    "collectCoverageFrom": [
      "src/**/*.{js,jsx}"
    ],

    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 66,
        "statements": 66
      }
    },

    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ]
  }
}
